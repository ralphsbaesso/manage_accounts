.row
  .col-lg-12
    %h3.page-header
      %i.fa.fa-laptop
      Tarefas
    %ol.breadcrumb{ style: 'background-color: gainsboro;' }
      %li
        %i.fa.fa-home
        %a{href: "/"} Home
      %li= link_to 'Tarefas', admins_tasks_path
      %li= link_to 'Criar nova tarefa', new_admins_task_path

.row
  .col-lg-12
    %table#table-item.table.table-bordered
      %thead
        %tr{:role => "row"}
          %th Nome
          %th Descrição
          %th Data de pagamento
          %th Feito
          %th Ações
      %tbody
        - @tasks.each do |task|
          %tr.gradeA.odd{:role => "row", class: task.done ? 'done' : 'not-done' }
            %td= task.name
            %td= task.description
            %td= format_date task.due_date
            %td= task.done
            %td
              = link_to edit_admins_task_path(task), class: 'btn btn-warning' do
                editar
                %i.fas.fa-edit
              = link_to admins_task_path(task), method: :delete, class: 'btn btn-danger', data: { confirm: 'Você tem certeza?' } do
                excluir
