!!!
%html{lang: "en"}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "Creative - Bootstrap 3 Responsive Admin Template", name: "description"}/
    %meta{content: "GeeksLabs", name: "author"}/
    %meta{content: "Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal", name: "keyword"}/
    -#%link{href: "img/favicon.png", rel: "shortcut icon"}/
    %title Creative - Bootstrap Admin Template

    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application', media: 'all'

  %body
    / container section start
    %section#container
      %header.header.dark-bg
        .toggle-nav
          .icon-reorder.tooltips{"data-original-title" => "Toggle Navigation", "data-placement" => "bottom"}
            %i.icon_menu
        / logo start
        %a.logo{href: "index.html"}
          Gerenciamento de
          %span.lite contas
        / logo end
        #top_menu.nav.search-row
          / search form start
          %ul.nav.top-menu
            %li
              %form.navbar-form
                %input.form-control{placeholder: "Search", type: "text"}/
          / search form end
        = render 'layouts/notification'
      / header end

      = render 'layouts/sidebar_menu'

      / main content start
      %section#main-content
        %section.wrapper

          = yield

.row
  .col-lg-12
    - if !@transporter.nil? && @transporter.messages.present?
      = render 'shared/modal-error'
      :javascript
        $('#modal-error').modal('show');
    - if notice
      :javascript
        $.notify({
            // options
            message: '#{notice}'
        },{
            // settings
            type: 'success'
        });


:javascript

  //knob
  $(function() {
    $(".knob").knob({
      'draw': function() {
        $(this.i).val(this.cv + '%')
      }
    })
  });

  //carousel
  $(document).ready(function() {
    $("#owl-slider").owlCarousel({
      navigation: true,
      slideSpeed: 300,
      paginationSpeed: 400,
      singleItem: true

    });
  });

  //custom select box

  $(function() {
    $('select.styled').customSelect();
  });

  /* ---------- Map ---------- */
  $(function() {
    $('#map').vectorMap({
      map: 'world_mill_en',
      series: {
        regions: [{
          values: gdpData,
          scale: ['#000', '#000'],
          normalizeFunction: 'polynomial'
        }]
      },
      backgroundColor: '#eef3f7',
      onLabelShow: function(e, el, code) {
        el.html(el.html() + ' (GDP - ' + gdpData[code] + ')');
      }
    });
  });