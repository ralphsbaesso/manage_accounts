<h2>Registrar</h2>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.text_field :name, autocomplete: "email", placeholder: 'Nome...', class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email...', class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autofocus: true, autocomplete: "email", placeholder: 'Senha...', class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "email", placeholder: 'Confirme a Senha...', class: "form-control" %>
          </div>
          <div class="form-group">
            <div class="checkbox">
              <label>
                <input type="checkbox"> Please accept the terms and conditions to proceed with your request.
              </label>
            </div>
          </div>
          <div class="form-group">
            <%= f.submit 'Sign up', class: 'btn btn-success' %>
            <%= render "accountants/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>