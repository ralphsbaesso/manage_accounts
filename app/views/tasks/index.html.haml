.row
  .col-lg-12
    %h3.page-header
      %i.fa.fa-laptop
      Contas a pagar
    %ol.breadcrumb{ style: 'background-color: gainsboro;' }
      %li
        %i.fa.fa-home
        %a{href: "/"} Home
      %li= link_to 'Tarefa', tasks_path
      %li= link_to 'Criar nova tarefa', new_task_path

.row
  .col-lg-12
    %table#table-item.table.table-bordered
      %thead
        %tr{:role => "row"}
          %th Nome
          %th Descrição
          %th Data de pagamento
          %th Pago
          %th Ações
      %tbody
        - @tasks.each do |task|
          %tr.gradeA.odd{:role => "row", class: task.done ? 'done' : 'not-done' }
            %td= task.name
            %td= task.description
            %td= format_date task.due_date
            %td= task.done
            %td
              = link_to edit_task_path(task), class: 'btn btn-warning' do
                editar
                %i.fas.fa-edit
              = form_tag  "/tasks/#{task.id}", method: :delete, style: 'display: inline;' do
                = button_tag nil, type: :submit, class: 'btn btn-danger', data: { confirm: 'Você tem certeza?' } do
                  excluir
                  %i.fas.fa-trash-alt
