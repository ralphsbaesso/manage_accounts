.row
  .col-lg-12
    %h3.page-header
      %i.fa.fa-laptop
      Contas
    %ol.breadcrumb{ style: 'background-color: gainsboro;' }
      %li
        %i.fa.fa-home
        %a{href: "/"} Home
      %li
        = link_to 'Contas', accounts_path

%section.panel
  %header.panel-heading
    %h1= title
  .panel-body
    = form_with(model: account, local: true, class: 'form-horizontal') do |form|
      .form-group
        = form.label :name, class: 'col-lg-3 control-label'
        .col-lg-9
          = form.text_field :name, class: 'form-control', placeholder: 'Nome da conta'
      .form-group
        = form.label :description, class: 'col-lg-3 control-label'
        .col-lg-9
          = form.text_field :description, class: 'form-control', placeholder: 'Descrição da conta'
      .form-group
        = form.label :header_file, class: 'col-lg-3 control-label'
        .col-lg-9
          = form.select :header_file, options_for_select_header_file(account.header_file, first_blank: true), {}, class: 'form-control'
      .form-group
        = form.label :ignore_descriptions, class: 'col-lg-3 control-label'
        .col-lg-9
          = form.text_area :ignore_descriptions, class: 'form-control', rezise: :vertical
      .form-group
        .col-lg-offset-2.col-lg-9
          = form.submit button, class: 'btn btn-primary'